-----
Aluno:
package model;
public class Aluno {
public String nome, matricula;
public Curso curso;

AlunoController:

package controller;

import java.util.ArrayList;
import java.util.List;

import model.Aluno;
import tela.AlunoInterfaceCadastro;

public class AlunoController {
	List<Aluno> alunos = new ArrayList<>();
	
	
	public void cadastrar() {
		AlunoInterfaceCadastro aic = new AlunoInterfaceCadastro();
		alunos.add(aic.cadastrarAluno());
		
		
	}
	
	public void visualisar() {
		
		for(Aluno aluno:alunos) {
			System.out.printf("Total de Alunos: %d\n", alunos.size());
			System.out.printf("Matricula: %s\n", aluno.matricula);
			System.out.printf("Nome: %s\n", aluno.nome);
			
		}
	}
			
}

AlunoInterface
package tela;

import java.util.Scanner;

import model.Aluno;
import controller.AlunoController;
public class AlunoInterfaceCadastro {
	public Aluno cadastrarAluno() {
		Aluno aluno = new Aluno ();
		Scanner e = new Scanner (System.in);
		
		System.out.print("Informe a nome do Aluno(a): ");
		aluno.nome = e.nextLine();
		
		System.out.print("\nInforme a matrícula do Aluno(a): ");
		aluno.matricula = e.nextLine();
	
		return aluno;
	}
}

