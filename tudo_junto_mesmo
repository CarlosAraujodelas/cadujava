Curso:

package model;
public class Curso {
	public String nome, sigla;
	public Departamento departamento;
}

Cursocontroller

package controller;

import java.util.ArrayList;
import java.util.List;

import model.Curso;
import tela.CursoInterfaceCadastro;

public class CursoController {
	List<Curso> cursos = new ArrayList<>();
	
	
	public void cadastrarCurso() {
		CursoInterfaceCadastro cur = new CursoInterfaceCadastro();
		cursos.add(cur.cadastrarCurso());
				
	}
	
	public void visualizarCurso() {
		
		for(Curso curso:cursos) {
			System.out.printf("Total de Curso: %d\n", cursos.size());
			System.out.printf("Nome: %s\n", curso.nome);
			System.out.printf("Sigla: %s\n", curso.sigla);
			
		}
	}
			
}

CursoInterface
package tela;

import java.util.Scanner;

import model.Curso;

public class CursoInterfaceCadastro {
	public Curso cadastrarCurso() {
		Curso curso = new Curso ();
		Scanner a = new Scanner (System.in);
		
		System.out.print("Informe o nome do Curso: ");
		curso.nome = a.nextLine();
		
		System.out.print("Informe a sigla do Curso: ");
		curso.sigla = a.nextLine();
		
		return curso;
	}
}

