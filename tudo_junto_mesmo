Campus:

package model;
public class Campus {
public String nome, sigla, cidade, bairro;

}

CampusController
package controller;

import java.util.ArrayList;
import java.util.List;

import model.Campus;
import tela.CampusInterfaceCadastro;

public class CampusController{
	List<Campus> campu= new ArrayList<>();
	
	
	public void cadastrarCampus() {
		CampusInterfaceCadastro cam = new CampusInterfaceCadastro();
		campu.add(cam.cadastrarCampus());
			
	}
	
	public void visualizarCampus() {
		
		for(Campus  campus:campu) {
			System.out.printf("Total de Campus: %d\n", campu.size());
			System.out.printf("Nome: %s\n", campus.nome);
			System.out.printf("Sigla: %s\n", campus.sigla);
			System.out.printf("Bairro: %s\n", campus.bairro);
			System.out.printf("Cidade: %s\n", campus.cidade);
		}
	}
			
}

CampusInterface
package tela;

import java.util.Scanner;

import model.Campus;

public class CampusInterfaceCadastro {
	public Campus cadastrarCampus() {
		Campus campus = new Campus ();
		Scanner a = new Scanner (System.in);
		
		System.out.print("Informe o nome do Campus: ");
		campus.nome = a.nextLine();
		
		System.out.print("Informe a sigla do Campus: ");
		campus.sigla = a.nextLine();
		
		System.out.print("Informe o bairro do Campus: ");
		campus.bairro = a.nextLine();
		
		System.out.print("Informe a cidade do Campus: ");
		campus.cidade = a.nextLine();
		
		return campus;
	}
}

------
Menu
package tela;
import java.util.Scanner;

import controller.AlunoController;
import controller.CampusController;
import controller.CursoController;
import controller.DepartamentoController;

public class MenuEscolaInterface {
	public void mostrarMenu() {
		Scanner opcaoMenu = new Scanner(System.in);	
		int opcao = 0;
		AlunoController alunoController = new AlunoController();
		CursoController cursoController = new CursoController();
		DepartamentoController departamentoController = new DepartamentoController();
		CampusController campusController = new CampusController();
		do{
			System.out.println("1. Cadastrar um Aluno");
			System.out.println("2. Listar Aluno");
			System.out.println("3. Cadastrar um Curso");
			System.out.println("4. Listar Curso");
			System.out.println("5. Cadastrar Departamento");
			System.out.println("6. Listar Departamento");
			System.out.println("7. Cadastrar Campus");
			System.out.println("8. Listar Campus");
			System.out.println("9. Sair");
			System.out.print  ("Escolha uma Opção: ");
	
			opcao = opcaoMenu.nextInt();
			
			switch (opcao) {
			case 1: 
					alunoController.cadastrar();
					break;
				
			case 2:
					alunoController.visualisar();
					break;
			case 3:
					cursoController.cadastrarCurso();
					break;
			case 4:
					cursoController.visualizarCurso();
					break;
			case 5:
				    departamentoController.cadastrarDepartamento();
				    break;
			case 6:
				     departamentoController.visualizarDepartamento();
			    break;    
			case 7:
				    campusController.cadastrarCampus();
			    break;
			case 8:
				    campusController.visualizarCampus();
			    break;
			case 9:
				System.out.printf("\nASTA LA VISTA, BABY\n");
				break;
            default:
            	System.out.printf("\nOpção inválida, Tente novamente\n");
            	break;
			}
		} while(opcao !=9);
	}
}
